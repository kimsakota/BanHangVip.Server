@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    // 1. LẤY THÔNG TIN TỪ SESSION
    var customerId = HttpContextAccessor.HttpContext.Session.GetInt32("CustomerId");
    var customerName = HttpContextAccessor.HttpContext.Session.GetString("CustomerName");
    var customerAvatar = HttpContextAccessor.HttpContext.Session.GetString("CustomerAvatar");

    // Kiểm tra controller hiện tại để xử lý active menu
    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

    // 2. LOGIC BẢO VỆ: Nếu chưa đăng nhập và không phải trang Login thì đá về trang Login
    // Lưu ý: Trang Login phải được set Layout = null để không bị lặp vô tận
    if (customerId == null && currentController != "Account")
    {
        Context.Response.Redirect("/Account/Login");
        // Không return ở đây để HTML vẫn render đủ cấu trúc, tránh lỗi trình duyệt
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BanHangVip</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BanHangVip.Server.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        .navbar-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* Màu tím xanh hiện đại */
            padding: 10px 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
            font-size: 1.4rem;
        }

        .nav-pills .nav-link {
            color: rgba(255,255,255,0.9) !important;
            border-radius: 50px;
            padding: 8px 20px;
            margin: 0 5px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .nav-pills .nav-link:hover {
                background-color: rgba(255,255,255,0.2);
                color: white !important;
            }
            /* Hiệu ứng khi Tab đang chọn */
            .nav-pills .nav-link.active {
                background-color: white !important;
                color: #764ba2 !important; /* Chữ màu tím */
                box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            }

        .user-info {
            color: white;
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(255,255,255,0.15);
            padding: 5px 15px;
            border-radius: 30px;
            font-size: 0.9rem;
        }

        .logout-btn {
            color: #ffcccc !important;
            text-decoration: none;
            margin-left: 5px;
        }

            .logout-btn:hover {
                color: white !important;
            }
    </style>
</head>
<body>
    @if (customerId != null)
    {
        /* 3. MENU MỚI (Chỉ hiện khi đã đăng nhập) */
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-shop me-2"></i>BanHangVip
                    </a>

                    <button class="navbar-toggler text-white border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa-solid fa-bars"></i>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 nav-pills">
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">
                                    <i class="fa-solid fa-plus-circle"></i> Tạo đơn
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentAction == "Pending" ? "active" : "")" asp-controller="Home" asp-action="Pending">
                                    <i class="fa-solid fa-hourglass-half"></i> Đơn đang đợi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "History" ? "active" : "")" asp-controller="History" asp-action="Index">
                                    <i class="fa-solid fa-clock-rotate-left"></i> Lịch sử
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentAction == "Statistics" ? "active" : "")" asp-controller="Home" asp-action="Statistics">
                                    <i class="fa-solid fa-chart-pie"></i> Thống kê
                                </a>
                            </li>
                        </ul>

                        <div class="user-info mt-2 mt-sm-0">
                            <span>@customerAvatar @customerName</span>
                            <a asp-controller="Account" asp-action="Logout" class="logout-btn" title="Thoát">
                                <i class="fa-solid fa-right-from-bracket"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BanHangVip.Server - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>